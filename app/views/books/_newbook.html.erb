<h2 class="mt-3">New book</h2>
<%= form_with model: book, local:true do |f| %>

<div class="field">
  <%= f.label :Title %>
  <%= f.text_field :title, class: "col-xs-12 book_title form-control" %>
</div>

<div class="field">
  <%= f.label :Opinion %>
  <%= f.text_area :body, class: "col-xs-12 book_body form-control" %>
</div>

<div class="actions">
  <%= f.submit 'Create Book', class: "btn btn-success col-xs-12" %>
</div>
<% end %>